#!/bin/bash

# ğŸŒ¿ Alpine Trading Bot Command Line Interface
# Usage: ./alpine [command] [options]

set -e

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Bot directory
BOT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$BOT_DIR"

# Function to display help
show_help() {
    echo -e "${GREEN}ğŸŒ¿ Alpine Trading Bot CLI${NC}"
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo ""
    echo -e "${YELLOW}TRADING COMMANDS:${NC}"
    echo "  start           ğŸš€ Start the trading bot with live trading"
    echo "  demo            ğŸ“Š Start the bot in demo/simulation mode"
    echo "  stop            â¹ï¸  Stop the running trading bot"
    echo "  restart         ğŸ”„ Restart the trading bot"
    echo ""
    echo -e "${YELLOW}MONITORING COMMANDS:${NC}"
    echo "  status          ğŸ“ˆ Check bot status and running processes"
    echo "  logs            ğŸ“ View recent trading logs"
    echo "  balance         ğŸ’° Check account balance"
    echo "  signals         ğŸ¯ Show recent trading signals"
    echo ""
    echo -e "${YELLOW}TESTING COMMANDS:${NC}"
    echo "  test            ğŸ§ª Run system tests"
    echo "  connection      ğŸ”Œ Test Bitget connection"
    echo "  config          âš™ï¸  Validate configuration"
    echo ""
    echo -e "${YELLOW}EXAMPLES:${NC}"
    echo "  ./alpine start           # Start live trading"
    echo "  ./alpine demo            # Run in simulation mode"
    echo "  ./alpine logs            # View recent logs"
    echo "  ./alpine status          # Check if bot is running"
    echo ""
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
}

# Function to check if bot is running
is_bot_running() {
    pgrep -f "start_trading.py" > /dev/null 2>&1
}

# Function to get bot PID
get_bot_pid() {
    pgrep -f "start_trading.py" 2>/dev/null | head -1
}

# Main command handling
case "${1:-help}" in
    "start"|"trade")
        echo -e "${GREEN}ğŸš€ Starting Alpine Trading Bot (Live Trading)...${NC}"
        if is_bot_running; then
            echo -e "${YELLOW}âš ï¸  Bot is already running (PID: $(get_bot_pid))${NC}"
            echo "Use './alpine restart' to restart or './alpine stop' to stop"
            exit 1
        fi
        echo -e "${BLUE}ğŸ“Š Configuration: 3m signals only, 75%+ confidence${NC}"
        python start_trading.py --trade &
        sleep 3
        if is_bot_running; then
            echo -e "${GREEN}âœ… Trading bot started successfully (PID: $(get_bot_pid))${NC}"
            echo "Use './alpine logs' to monitor activity"
        else
            echo -e "${RED}âŒ Failed to start trading bot${NC}"
            exit 1
        fi
        ;;
        
    "demo"|"sim"|"simulation")
        echo -e "${BLUE}ğŸ“Š Starting Alpine Trading Bot (Demo Mode)...${NC}"
        if is_bot_running; then
            echo -e "${YELLOW}âš ï¸  Bot is already running (PID: $(get_bot_pid))${NC}"
            echo "Use './alpine restart' to restart or './alpine stop' to stop"
            exit 1
        fi
        python start_trading.py --demo &
        sleep 3
        if is_bot_running; then
            echo -e "${GREEN}âœ… Demo bot started successfully (PID: $(get_bot_pid))${NC}"
        else
            echo -e "${RED}âŒ Failed to start demo bot${NC}"
            exit 1
        fi
        ;;
        
    "stop")
        echo -e "${YELLOW}â¹ï¸  Stopping Alpine Trading Bot...${NC}"
        if is_bot_running; then
            pkill -f "start_trading.py"
            sleep 2
            if ! is_bot_running; then
                echo -e "${GREEN}âœ… Trading bot stopped successfully${NC}"
            else
                echo -e "${RED}âŒ Failed to stop trading bot${NC}"
                exit 1
            fi
        else
            echo -e "${YELLOW}â„¹ï¸  No trading bot is currently running${NC}"
        fi
        ;;
        
    "restart")
        echo -e "${BLUE}ğŸ”„ Restarting Alpine Trading Bot...${NC}"
        if is_bot_running; then
            ./alpine stop
            sleep 2
        fi
        ./alpine start
        ;;
        
    "status")
        echo -e "${GREEN}ğŸ“ˆ Alpine Trading Bot Status${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        if is_bot_running; then
            echo -e "${GREEN}ğŸŸ¢ Status: RUNNING${NC}"
            echo -e "${BLUE}ğŸ“ Process ID: $(get_bot_pid)${NC}"
            echo -e "${BLUE}â° Started: $(ps -o lstart= -p $(get_bot_pid) 2>/dev/null || echo 'Unknown')${NC}"
        else
            echo -e "${RED}ğŸ”´ Status: STOPPED${NC}"
        fi
        
        # Show configuration
        echo -e "${YELLOW}âš™ï¸  Configuration:${NC}"
        echo "   â€¢ Timeframes: 3m only"
        echo "   â€¢ Min Confidence: 75%"
        echo "   â€¢ Risk per Trade: 2%"
        echo "   â€¢ Max Positions: 20"
        
        # Show recent activity
        if [[ -f "logs/alpine_bot_$(date +%Y-%m-%d).log" ]]; then
            echo -e "${YELLOW}ğŸ“Š Recent Activity:${NC}"
            tail -3 "logs/alpine_bot_$(date +%Y-%m-%d).log" | grep -E "(Signal|signal|complete)" | tail -2 || echo "   No recent signals"
        fi
        ;;
        
    "logs")
        echo -e "${GREEN}ğŸ“ Alpine Trading Bot Logs${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        
        # Show recent signals and activity
        if [[ -f "logs/alpine_bot_$(date +%Y-%m-%d).log" ]]; then
            echo -e "${YELLOW}ğŸ¯ Recent Signals (Last 10):${NC}"
            grep -E "(Signal|confidence|CONFLUENCE)" "logs/alpine_bot_$(date +%Y-%m-%d).log" | tail -10 || echo "No recent signals found"
            echo ""
            echo -e "${YELLOW}ğŸ“Š Recent Activity (Last 20 lines):${NC}"
            tail -20 "logs/alpine_bot_$(date +%Y-%m-%d).log"
        else
            echo "No log file found for today"
        fi
        ;;
        
    "balance")
        echo -e "${GREEN}ğŸ’° Account Balance${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        python -c "
import sys
sys.path.append('.')
from bitget_client import BitgetClient
try:
    client = BitgetClient()
    balance = client.get_balance()
    print(f'ğŸ’° Available: \${balance[\"available\"]:.2f} USDT')
    print(f'ğŸ“Š Equity: \${balance[\"usdtEquity\"]:.2f} USDT')
    print(f'ğŸ”’ Locked: \${balance[\"locked\"]:.2f} USDT')
    print(f'ğŸ“ˆ Unrealized P&L: \${balance[\"unrealizedPL\"]:.2f} USDT')
except Exception as e:
    print(f'âŒ Error fetching balance: {e}')
"
        ;;
        
    "signals")
        echo -e "${GREEN}ğŸ¯ Recent Trading Signals${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        if [[ -f "logs/alpine_bot_$(date +%Y-%m-%d).log" ]]; then
            grep -E "(Signal.*Confidence:|CONFLUENCE SIGNAL)" "logs/alpine_bot_$(date +%Y-%m-%d).log" | tail -15 || echo "No signals found today"
        else
            echo "No log file found for today"
        fi
        ;;
        
    "test")
        echo -e "${GREEN}ğŸ§ª Running System Tests${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        python check_status.py
        ;;
        
    "connection"|"conn")
        echo -e "${GREEN}ğŸ”Œ Testing Bitget Connection${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        python test_connection.py
        ;;
        
    "config")
        echo -e "${GREEN}âš™ï¸  Configuration Status${NC}"
        echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
        python -c "
from config import TradingConfig
config = TradingConfig()
print(f'ğŸ¯ Timeframes: {config.timeframes}')
print(f'ğŸ“Š Min Signal Confidence: {config.min_signal_confidence}%')
print(f'ğŸ’° Risk per Trade: {config.risk_per_trade}%')
print(f'ğŸ“ˆ Max Positions: {config.max_position_size}')
print(f'â° Primary Timeframe: {config.primary_timeframe}')
"
        ;;
        
    "help"|"--help"|"-h"|"")
        show_help
        ;;
        
    *)
        echo -e "${RED}âŒ Unknown command: $1${NC}"
        echo ""
        show_help
        exit 1
        ;;
esac 